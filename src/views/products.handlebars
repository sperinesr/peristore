<div class="container">
    <h1 class="title">Productos</h1>
    <div class="products-grid">
        {{#each products}}
        <div class="card">
            <a href="/products/{{this.id}}">
                <img class="card-img" src="{{this.picture}}" alt="Imagen del producto">
            </a>
            <div class="card-content">

                <h2 class="card-title">{{this.name}}</h2>
                {{!-- <p class="card-category">Categoria: {{this.category}}</p> --}}
                {{!-- <p class="card-stock">Stock: {{this.stock}}</p> --}}
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"></li>
                    <li class="list-group-item">Precio: ${{this.price}}</li>
                </ul>
            </div>
        </div>
        {{/each}}
    </div>

</div>

<button id="btndatos" onclick="mostrarDatosTransferencia()">Ver datos de transferencia
    bancaria</button>

